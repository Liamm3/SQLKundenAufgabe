<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label>Vorname:</Label>
        <TextBox Grid.Column="1" Margin="0,0,0,10" Name="firstNameInput" />
        <Label Grid.Row="1">Nachname:</Label>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" Name="lastNameInput" />
        <Label Grid.Row="2">Geburtsdatum:</Label>
        <DatePicker Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" Name="birthdateInput" />
        <Button Grid.Row="3" Grid.Column="2" Click="Button_Click">Hinzufügen</Button>
    </Grid>
</Window>
